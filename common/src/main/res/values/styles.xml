<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/comfortaa</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/comfortaa</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppText.Header" parent="AppText">
        <item name="android:textSize">@dimen/app_large_text_size</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="AppText.SuperHeader" parent="AppText">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">@dimen/app_super_large_text_size</item>
    </style>

    <style name="AppText.Light" parent="AppText">
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="AppText.Bold" parent="AppText">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="AppText.Small" parent="AppText">
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

    <style name="AppText.Small.Bold" parent="AppText">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

    <style name="AppText.Small.Light" parent="AppText">
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

    <style name="AppText.Medium" parent="AppText">
        <item name="android:textSize">@dimen/app_medium_text_size</item>
    </style>

    <style name="AppText.GrayedOut" parent="AppText">
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@color/faint_text_color</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppChoiceChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppChoiceChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

</resources>